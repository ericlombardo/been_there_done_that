<% content_for :title do %>
  <h1>Let's Make A Memory</h1>
<% end %>


<form method="POST" action="/adventures">
  
  <label for="title">Trip Title: *</label>
  <input type="text" id="title" name="adventure[title]" size="40" required>

  <label for="highlight">Highlight: *</label>
  <textarea id="highlight" rows="3" cols="40" maxlength="150" name="adventure[highlight]" placeholder="150 characters or less" required></textarea>

  <label for="start_date">Trip Start Date:</label>
  <input type="date" id="start_date" name="adventure[start_date]">

  <label for="end_date">Trip End Date:</label>
  <input type="date" id="end_date" name="adventure[end_date]">

  <label for="rating">Rating:</label>
  <select name="adventure[rating]" id="rating">
    <% x = 1 %>
    <option value='' selected></option>
    <% 10.times do %>
      <option value="<%=x%>"><%=x%></option>
      <% x += 1 %>
    <% end %>
  </select>

  <label for="recommend">Would you recommend his trip?</label>
  <input type="radio" id="recommend" value="yes" name="adventure[recommend]"> Yes</input>
  <input type="radio" id="recommend" value="no" name="adventure[recommend]"> No</input>

  <label for="miles_covered">Miles Covered:</label>
  <input type="number" id="miles_covered" name="adventure[miles_covered]">

  <label for="companions">Companions:</label>
  <input type="text" id="companions" name="adventure[companions]">

  <label for="weather">Weather:</label>
  <input type="text" id="weather" name="adventure[weather]">

  <label for="summary">Trip Summary: *</label>
  <textarea id="summary" name="adventure[summary]" rows="7" cols="50" placeholder="Share with people what all you got into" required></textarea>

  <label for="transportation">Transportation:</label>
  <input type="text" id="transportation" name="adventure[transportation]">

  <label for="food">Food:</label>
  <input type="text" id="food" name="adventure[food]">
    
  <label for="private_notes">Notes Just For You</label>
  <textarea id="private_notes" name="adventure[private_notes]" rows="7" cols="50" placeholder="These won't be shown on public profiles"></textarea>



  <!--States and Activities Section-->
  <% i = 1 %>  
  <% 3.times do %>
    <label for="state_<%= i %>">Select State: <%= '* (select state to track activities)' if i == 1 %></label>
    <select name="log[state<%=i%>][id]" id="state_<%=i%>" <%= 'required' if i == 1 %>>
      <option selected hidden disabled style="display:none"></option>
      
      <% @states.each do |s| %>
        <option id="state_<%=i%>" value="<%=s.id %>"><%=s.name%></option>
      <% end %>
    </select>
    <label for="activity_list">Select Activities:</label>
    <% x = 0 %>
    <% 3.times do %>
      <select name="log[state<%=i%>][activities][]" id="activity_list">
        <option selected hidden disabled style="display:none"></option>
        <% @activities.each do |a| %>
          <option value="<%=a.id%>"><%=a.name %></option>
        <% end %>
      </select>
      <% x += 1 %>
    <% end %>
    <% i += 1 %>
  <% end %>

  <input type="submit" value="Log Adventure">
</from>
