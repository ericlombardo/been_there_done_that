<h1>Adventures</h1>
<h3>Filter Adventures:</h3>
<h4>By State: </h4>
<form method="POST" action="/adventures">
<select name="state_filter" id="state_filter"> 
  <option selected value=''></option>
  <% @states.each do |s| %> 
  <option id="state_filter" value="<%=s.id%>"><%=s.name%></option>
<% end %>
</select>
<input type="submit" value="Filter Resualts">
</form>

<% if @state_filter.nil? %>
  <% @adventures.each do |a| %>
    <h2><a href="adventures/<%=a.id%>"><%=a.title %></a></h2><br>
    <h4>States: <%=a.states.uniq.pluck(:name).join(", ")%></h4>
    <h4>Activities: <%=a.activities.pluck(:name).join(", ")%></h4>
  <% end %>
<% else %>
  <% @state_filter.each do |a| %>
    <h2><a href="<%=a.id%>"><%=a.title%></a></h2>
    <h4>States: <%=a.states.uniq.pluck(:name).join(", ")%></h4>
    <h4>Activities: <%=a.activities.pluck(:name).join(", ")%></h4>
  <% end %>
<% end %>







