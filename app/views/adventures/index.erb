<h1>Adventures</h1>
<h3>Filter Adventures:</h3>
<h4>By State: </h4>
<form method="POST" action="/adventures/filtered">
<select name="filter_ids[]" id="state_filter"> 
  <option selected value=''></option>
  <% @states.each do |s| %> 
  <option id="state_filter" value="<%=s.id%>"><%=s.name%></option>
<% end %>
</select>

<h4>By Activity: </h4>
<select name="filter_ids[]" id="activity_filter">
  <option selected value=''></option>
  <% @activities.each do |a| %>
  <option id="activity_filter" value="<%=a.id%>"><%=a.name%></option>
<% end %>
</select><br>

<input type="submit" value="Filter Resualts">
</form>
<% if @filtered.nil? %>
  <% binding.pry %>
  <% @adventures.reverse.each do |a| %>
    <h2><a href="adventures/<%=a.slug%>"><%=a.title %></a></h2><br>
    <h4>States: <%=a.states.uniq.pluck(:name).join(", ")%></h4>
    <h4>Activities: <%=a.activities.pluck(:name).join(", ")%></h4>
  <% end %>
<% else %>
  <% @filtered.reverse.each do |a| %>
    <h2><a href="<%=a.id%>"><%=a.title%></a></h2>
    <h4>States: <%=a.states.uniq.pluck(:name).join(", ")%></h4>
    <h4>Activities: <%=a.activities.pluck(:name).join(", ")%></h4>
  <% end %>
<% end %>