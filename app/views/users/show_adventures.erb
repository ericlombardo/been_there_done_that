<div class="main_form text-center padded_sides">
  <% if @adventures.empty? %>
    <h1>Sorry, no adventures tracked yet.</h1>
  <% else %>
    <% @adventures.reverse.each do |a| %>
      <div class="row">   <!--shows adventure title-->
        <h2><a href="/adventures/<%=a.slug%>"><%=a.title%></a></h2>
      </div>
      <div class="row bottom_margin">   <!--shows adventure highlight-->
        <h4><%=a.highlight%></h4>
      </div>
    <% end %>
  <% end %>

</div>