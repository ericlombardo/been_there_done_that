<div id="login_img" class="bg-image"> <!--bg-image, display box, and form-->
  <div class="container">
    <div class="position-absolute top-50 start-50 translate-middle">
      <div id="login_box" class="row rounded" style="background-color:rgba(255, 255, 255, .5);">
        <form method="POST" class="login_text" action="/signup">
          <h1 class="cover_title">Been There! Done That!</h1>
          <h3 class="cover_title">Sign up to Track Your Adventures</h3>
          <input type="text" id="signup_username_input" name="username" placeholder="Username" required><br>
          <input type="email" id="signup_email_input" name="email" placeholder="Email" required><br>
          <input type="password" id="signup_password_input" name="password" placeholder="Password" required><br>
          <button type="submit" class="bt btn btn-primary btn-sm">Sign up</button>
          <p>Already have an account? <a style="color:rgb(26, 110, 240);" href="/login">login here</a></p>
        </form>
      </div>
    </div>
  </div>
</div>