  <body>
    
    <div class="wrapper">      
      <% flash.keys.each do |k| %>
        <% if flash[k] %>
          <div class="alert alert-<%=k%>">
            <%= flash[k] %>
          </div>
        <% end %>
      <% end %>
        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>BeenThereDoneThat</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
